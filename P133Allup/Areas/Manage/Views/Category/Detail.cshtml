@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-8">
        <h1 class="h3 mb-0 text-gray-800 mb-4"> Category Detail</h1>
    </div>
    <div class="col-lg-4">
        <a class="btn btn-primary" asp-area="manage" asp-controller="category" asp-action="index">Go To Home</a>
    </div>
</div>
<div class="row my-3">

    <div class="col-lg-5">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <img style="width : 100px" src="~/assets/images/@Model.Image" />
                <h5 class="card-title "><strong>Category Name</strong> : @Model.Name</h5>
                <p class="card-text "><strong>Total Product Count </strong> : @Model.Products.Count()</p>
            </div>
        </div>

    </div>

</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th>Settings</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <th>@product.Title</th>
                        <th>@product.CreatedBy</th>
                        <th>@product.CreatedAt?.ToString("dd-MMMM-yyyy")</th>
                        <th>

                            <a asp-area="manage" asp-controller="brand" asp-action="detail"  class="btn btn-primary">Detail</a>
                            <a asp-area="manage" asp-controller="brand" asp-action="Delete"  class="btn btn-danger">Delete</a>
                            <a asp-area="manage" asp-controller="brand" asp-action="update"  class="btn btn-warning">Update</a>

                        </th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>