@model Brand
@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-lg-4">
        <h1 class="h3 mb-0 text-gray-800 mb-4">Brands Delete</h1>
    </div>
    <div class="col-lg-4">
        <a class="btn btn-primary" asp-area="manage" asp-controller="brand" asp-action="index">Go To Home</a>
    </div>
    <div class="col-lg-4">
        <a class="btn btn-danger" asp-area="manage" asp-controller="brand" asp-action="DeleteBrand" asp-route-id=@Model.Id >Delete</a>
    </div>
</div>
<div class="row my-3">

    <div class="col-lg-5">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><strong>Brand Name</strong> : @Model.Name</h5>
                <p class="card-text"><strong>Total Product Count </strong> : @Model.Products.Count()</p>
            </div>
        </div>

    </div>

</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created By</th>
                    <th>Created At</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <th>@product.Title</th>
                        <th>@product.CreatedBy</th>
                        <th>@product.CreatedAt?.ToString("dd-MMMM-yyyy")</th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
