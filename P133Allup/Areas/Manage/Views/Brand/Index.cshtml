@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
    var count = 0;
}

<div class="row">
    <div class="col-lg-10">
        <h1 class="h3 mb-0 text-gray-800 mb-4"> Brands</h1>
    </div>
    <div class="col-lg-2">
        <a asp-area="manage" asp-controller="brand" asp-action="create" class="btn btn-primary">Create New Brand</a>
    </div>

</div>


<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th>Product Count</th>
                    <th>Setting</th>

                </tr>
            </thead>
            <tbody>
                 @foreach (Brand brand in Model)
                {
                    <tr>
                        <th>@count</th>
                        <th>@brand.Name</th>
                        <th>@brand.CreatedBy</th>
                        <th>@brand.CreatedAt?.ToString("dd-MMMM-yyyy")</th>
                        <th>@brand.Products?.Count()</th>
                        <th>

                            <a asp-area="manage" asp-controller="brand" asp-action="detail" asp-route-id="@brand.Id" class="btn btn-primary">Detail</a>
                            <a asp-area="manage" asp-controller="brand" asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger">Delete</a>
                            <a asp-area="manage" asp-controller="brand" asp-action="update" asp-route-id="@brand.Id" class="btn btn-warning">Update</a>

                        </th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>